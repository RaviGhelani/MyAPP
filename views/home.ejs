        <script>
            let token;
            if ("x-auth-token" in localStorage) {
                token = localStorage["x-auth-token"]
                console.log('User already logIn!')
            } else {
                alert('you have to login first...!');
                window.location = "/api/users/logIn"
            }

            $(document).ready(function () {
                $("#home").click(function () {
                    window.location = "/"
                });
                $("#profile").click(function () {
                    $("#content").load(`/api/profiles?token=${token}`);
                });
                $("#chat").click(function () {
                    $("#content").load(`/api/chats?token=${token}`);
                });
                $("#logOut").click(function () {
                    window.location = "/api/users/logIn";
                    window.localStorage.removeItem("x-auth-token");
                });
            });
        </script>
        <script type="text/javascript">

            const socket = io("http://localhost:3000")

            // let name = "Ravi";
            // let today = new Date();
            // let time = today.getHours() + ":" + today.getMinutes();
            // let textarea = document.querySelector('#textarea')
            // let messagelist = document.querySelector('.chat__messages')

            let input = document.querySelector('#input')
            let chatArea = document.querySelector('.chat__messages')
            let username = "Ravi"

            input.addEventListener('keyup', (e) => {
                if (e.key === 'Enter') {
                    sendMessage(e.target.value)
                    console.log('pressed')
                }
            })

            function sendMessage(message) {
                let msg = {
                    user: username,
                    message: message.trim()
                }
                // Append 
                appendMessage(msg, 'outgoing')
                input.value = ''
                scrollToBottom()

                // Send to server 
                socket.emit('message', msg)

            }

            function appendMessage(msg, type) {
                let mainDiv = document.createElement('div')
                let className = type
                mainDiv.classList.add(className, 'message')

                let markup = `<h4>${msg.user}</h4> 
                          <p>${msg.message}</p>`
                mainDiv.innerHTML = markup
                chatArea.appendChild(mainDiv)
            }

            // Recieve messages 
            socket.on('message', (msg) => {
                appendMessage(msg, 'incoming')
                scrollToBottom()
            })

            function scrollToBottom() {
                chatArea.scrollTop = chatArea.scrollHeight
            }


        </script>

