<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LogIn</title>
    <style>
        .parent {
            width: 100%;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .main {
            display: flex;
            flex-grow: 1;
        }

        .content {
            flex-grow: 1;
        }

        /* --------- Non-flexbox related styles --------- */
        .child {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0.5%;
            padding: 20px;
            font-size: 20px;
            line-height: 20px;
            background-color: #e7f3f7;
            border-radius: 10px;
            border: 10px solid #a3dcf7;
        }

        body {
            display: flex;
            width: auto;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #f8eded;
            font-family: 'Roboto', sans-serif;
        }

        a{
            color: rgb(62, 19, 129);
        }

        .lists {
            padding: 10px;
            color: rgb(38, 7, 88);
            margin: 10px;
        }

        .ulists {
            padding: 10px;

        }

        ul#ulists li {
            display: inline;
        }
    </style>
</head>

<body>
    <div class="parent">
        <div class="child">
             <img height="60" src="data:image/png;base64," alt="">
            
                <ul id="ulists">
                    <li id="lists"> <a id="home"> Home </a> </li>  &nbsp; &nbsp;
                    <li id="lists"> <a id="chat"> Globle_Chat </a> </li> &nbsp; &nbsp;
                    <li id="lists"> <a id="profile"> Profile </a> </li> &nbsp; &nbsp;
                    <li id="lists"> <a id="logOut"> LogOut </a> </li> &nbsp; &nbsp;
                </ul>
            
        </div>
        <div class="main">
           
            <div class="child content" id="content">This is Home Page</div>
        </div>
        <div class="child"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

    <script>
        let token;
        if ("x-auth-token" in localStorage) {
            token = localStorage["x-auth-token"]
            console.log('User already logIn!')
        } else {
            alert('you have to login first...!');
            window.location = "/api/users/logIn"
        }

        $(document).ready(function () {
            $("#home").click(function () {
                $("#content").load(`/api/profiles?token=${token}`);
            });
            $("#profile").click(function () {
                $("#content").load(`/api/profiles?token=${token}`);
            });
            $("#chat").click(function () {
                $("#content").load(`/api/chats?token=${token}`);
            });
            $("#logOut").click(function () {
                window.location = "/api/users/logIn";
                window.localStorage.removeItem("x-auth-token");
            });
        });
    </script>


</body>

</html>